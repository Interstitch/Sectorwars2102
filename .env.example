# Database Configuration
DATABASE_URL=postgresql://neondb_owner:your_password@your_host.neon.tech/neondb?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# AI Provider Configuration
# Primary provider (tried first) - OpenAI is cheaper for dialogue
AI_PROVIDER_PRIMARY=openai
AI_PROVIDER_SECONDARY=anthropic
AI_PROVIDER_FALLBACK=manual

# API Keys for AI Providers
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# AI Model Configuration
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_MODEL=claude-3-sonnet-20240229
AI_DIALOGUE_ENABLED=true

# Development Environment
ENVIRONMENT=development
DEBUG=true
DEV_ENVIRONMENT=codespaces

# GitHub OAuth (optional)
CLIENT_ID_GITHUB=your_github_oauth_client_id
CLIENT_SECRET_GITHUB=your_github_oauth_client_secret

# Frontend URLs (auto-detected in most cases)
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8080